<h1>Product catalog</h1>

<table border='1'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p| %>
    <tr>
         <td><%=p.name%></td>
         <td><%=p.price%>$</td>
         <td><%=p.description%></td>
         <td><%= image_tag(p.image)%></td>
         <td><%= link_to "Edit", edit_product_path(p) %></td>
         <td><%= link_to "Show", show_product_path(p) %></td>
         <td><%= link_to "Delete", product_path(p), :confirm => "Are you sure?", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New", new_product_path %>
